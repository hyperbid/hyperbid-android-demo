<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.HyperBid.demoApp">
    <uses-permission android:name="com.google.android.gms.permission.AD_ID" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/Theme.Hyperbid_android_demo"
        android:usesCleartextTraffic="true"

        >Other Hosts

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-9488501426181082~6354662111" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <activity
            android:name="com.HyperBid.demoApp.MainActivity"
            android:exported="true"
            android:theme="@android:style/Theme.Holo.NoActionBar"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.HyperBid.demoApp.NativeAdActivity"
            android:label="Native"
            android:launchMode="singleTask" />
        <activity
            android:name="com.HyperBid.demoApp.RewardVideoAdActivity"
            android:label="RewardedVideo"
            android:launchMode="singleTask" />
        <activity
            android:name="com.HyperBid.demoApp.InterstitialAdActivity"
            android:label="Interstitial"
            android:launchMode="singleTask" />
        <activity
            android:name="com.HyperBid.demoApp.BannerAdActivity"
            android:label="Banner"
            android:launchMode="singleTask" />

        <activity
            android:name="com.HyperBid.demoApp.SplashAdActivity"
            android:configChanges="keyboardHidden|orientation|keyboard|smallestScreenSize|screenSize|screenLayout" />
        <activity
            android:name="com.HyperBid.demoApp.SplashAdShowActivity"
            android:configChanges="keyboardHidden|orientation|keyboard|smallestScreenSize|screenSize|screenLayout"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen" />
        <activity
            android:name="com.HyperBid.demoApp.SplashAdShowInCurrentActivity"
            android:configChanges="keyboardHidden|orientation|keyboard|smallestScreenSize|screenSize|screenLayout"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen" />

        <activity
            android:name="com.HyperBid.demoApp.NativeBannerActivity"
            android:configChanges="keyboardHidden|orientation|keyboard|smallestScreenSize|screenSize|screenLayout"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen" />
        <activity
            android:name="com.HyperBid.demoApp.NativeSplashActivity"
            android:configChanges="keyboardHidden|orientation|keyboard|smallestScreenSize|screenSize|screenLayout"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen" />

        <activity
            android:name="com.HyperBid.demoApp.NativeListActivity"
            android:configChanges="keyboardHidden|orientation|keyboard|smallestScreenSize|screenSize|screenLayout"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen" />

        <activity
            android:name="com.HyperBid.demoApp.MultipleFormatLoadActivity"
            android:configChanges="keyboardHidden|orientation|keyboard|smallestScreenSize|screenSize|screenLayout"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen" />

        <meta-data
            android:name="com.google.android.gms.ads.AD_MANAGER_APP"
            android:value="true" />

        <activity
            android:name="com.tapjoy.TJAdUnitActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:hardwareAccelerated="true"
            android:theme="@android:style/Theme.Translucent.NoTitleBar.Fullscreen" />
        <activity
            android:name="com.tapjoy.TJContentActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:hardwareAccelerated="true" />

        <meta-data
            android:name="com.google.android.gms.ads.AD_MANAGER_APP"
            android:value="true" />

    </application>

</manifest>