<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/design_default_color_primary</item>
        <item name="colorPrimaryDark">@color/design_default_color_primary_dark</item>
        <item name="colorAccent">@color/design_default_color_primary_variant</item>
        <item name="android:windowActionBar">false</item>
    </style>
    <style name="style_btn">
        <item name="android:textSize">@dimen/hyperbid_14dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/selector_btn</item>
        <item name="android:background">@drawable/selector_bg_1</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="style_checkBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/hyperbid_666666</item>
        <item name="colorControlActivated">@color/hyperbid_0042DF</item>
    </style>

</resources>
