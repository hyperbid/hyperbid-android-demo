<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hyperbid_F5F5F5">

    <com.gameanalytics.demoApp.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hyperbid_45dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_bar"
        android:layout_marginTop="0dp"
        android:padding="@dimen/hyperbid_padding">

        <RelativeLayout
            android:id="@+id/rl_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_bg_ad_type">

            <ImageView
                android:id="@+id/iv_format"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/text_size_12"
                android:src="@mipmap/iv_rewarded_video" />

            <TextView
                android:id="@+id/tv_format"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_format"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/hyperbid_10dp"
                android:layout_marginBottom="@dimen/hyperbid_10dp"
                android:text="@string/hyperbid_title_rewarded_video"
                android:textSize="@dimen/hyperbid_title_size" />

        </RelativeLayout>

        <include layout="@layout/include_select_network" />

        <include layout="@layout/include_log_area" />

        <include layout="@layout/include_btn" />

    </RelativeLayout>

</RelativeLayout>
