<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main">

    <Spinner
        android:id="@+id/banner_spinner"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:spinnerMode="dropdown" />

    <Button
        android:id="@+id/loadAd_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/banner_spinner"
        android:layout_centerInParent="true"
        android:padding="10dp"
        android:text="Banner Load Ad" />


    <FrameLayout
        android:id="@+id/adview_container"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/loadAd_btn"
        android:layout_marginTop="10dp"></FrameLayout>

</RelativeLayout>
